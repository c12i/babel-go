<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ .title }} - Library of Babel</title>
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg" />

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              parchment: "#f4f1e8",
              ink: "#1a1a1a",
              aged: "#c9b99b",
            },
            fontFamily: {
              mono: ["Courier New", "Courier", "monospace"],
            },
          },
        },
      };
    </script>

    <style type="text/tailwindcss">
      @layer components {
        .location-link {
          @apply bg-transparent border-0 text-aged font-mono p-0 cursor-pointer text-left hover:text-amber-600 transition-colors w-full;
        }

        .page-content {
          @apply font-mono text-sm leading-loose tracking-wide whitespace-pre-wrap break-words;
        }
      }

      body {
        background: linear-gradient(to bottom, #0a0a0a 0%, #1a1a1a 100%);
      }
    </style>
  </head>
  <body class="min-h-screen text-parchment font-mono">
    <header class="border-b border-aged/20 py-6">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between">
          <a
            href="/"
            class="text-2xl tracking-widest text-aged hover:text-amber-600 transition-colors"
          >
            THE LIBRARY
          </a>
          <nav class="flex gap-8 text-sm tracking-wider">
            <a
              href="/search"
              class="text-aged/80 hover:text-aged transition-colors"
              >SEARCH</a
            >
            <a
              href="/browse"
              class="text-aged/80 hover:text-aged transition-colors"
              >BROWSE</a
            >
          </nav>
        </div>
      </div>
    </header>

    <main class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto">
        <div class="bg-ink/50 border border-aged/20 rounded p-8 mb-8">
          <h1 class="text-xs tracking-[0.3em] text-aged/60 uppercase mb-6">Search</h1>

          {{ if .error }}
          <div
            class="bg-red-900/20 border border-red-900/50 text-red-400 p-4 mb-6 text-sm"
          >
            {{ .error }}
          </div>
          {{ end }}

          <form action="/search" method="POST" class="space-y-4">
            <textarea
              name="text"
              rows="6"
              maxlength="3200"
              placeholder="Enter text to search..."
              class="w-full bg-ink/80 border border-aged/30 rounded px-4 py-3 text-parchment font-mono text-sm focus:outline-none focus:border-aged/60 transition-colors placeholder-aged/30"
            >{{ .query }}</textarea>

            <button
              type="submit"
              class="w-full bg-aged/10 hover:bg-aged/20 border border-aged/30 text-aged px-6 py-3 rounded transition-all tracking-widest text-sm uppercase"
            >
              Search
            </button>
          </form>
        </div>

        {{ if .locations }}
        <div class="space-y-6">
          <div class="text-center py-6">
            <p class="text-aged/60 text-sm">
              <span class="text-aged text-2xl font-light">{{ .total }}</span>
            </p>
            <p class="text-aged/40 text-xs tracking-widest uppercase mt-2">
              occurrences found
            </p>
          </div>

          <div class="space-y-2">
            <p class="text-aged/50 text-xs tracking-widest uppercase mb-4">
              Page {{ .currentPage }} of {{ .totalPages }}
            </p>

            {{ range .locations }}
            <div
              class="bg-ink/30 border border-aged/10 hover:border-aged/30 transition-colors"
            >
              <form action="/browse" method="POST" class="w-full">
                <input type="hidden" name="location" value="{{ .String }}" />
                <input type="hidden" name="query" value="{{ $.query }}" />
                <button type="submit" class="location-link px-4 py-3 text-xs truncate" title="{{ .String }}">
                  {{ .String }}
                </button>
              </form>
            </div>
            {{ end }}
          </div>

          <div class="flex justify-center items-center gap-3 pt-6">
            <form action="/search" method="POST">
              <input type="hidden" name="text" value="{{ .query }}" />
              <input type="hidden" name="page" value="{{ sub .currentPage 1 }}" />
              <button
                type="submit"
                {{ if not .hasPrev }}disabled{{ end }}
                class="bg-aged/10 hover:bg-aged/20 disabled:bg-aged/5 border border-aged/30 disabled:border-aged/20 text-aged disabled:text-aged/30 px-4 py-2 rounded transition-all text-xs disabled:cursor-not-allowed"
              >
                ←
              </button>
            </form>

            <form action="/search" method="POST" class="flex items-center gap-2">
              <input type="hidden" name="text" value="{{ .query }}" />
              <input
                type="number"
                name="page"
                min="1"
                max="{{ .totalPages }}"
                placeholder="{{ .currentPage }}"
                class="w-16 bg-ink/80 border border-aged/30 rounded px-2 py-2 text-parchment font-mono text-xs text-center focus:outline-none focus:border-aged/60 transition-colors"
              />
              <span class="text-aged/50 text-xs">/ {{ .totalPages }}</span>
              <button
                type="submit"
                class="bg-aged/10 hover:bg-aged/20 border border-aged/30 text-aged px-3 py-2 rounded transition-all text-xs"
              >
                Go
              </button>
            </form>

            <form action="/search" method="POST">
              <input type="hidden" name="text" value="{{ .query }}" />
              <input type="hidden" name="page" value="{{ add .currentPage 1 }}" />
              <button
                type="submit"
                {{ if not .hasNext }}disabled{{ end }}
                class="bg-aged/10 hover:bg-aged/20 disabled:bg-aged/5 border border-aged/30 disabled:border-aged/20 text-aged disabled:text-aged/30 px-4 py-2 rounded transition-all text-xs disabled:cursor-not-allowed"
              >
                →
              </button>
            </form>
          </div>
        </div>
        {{ end }}
      </div>
    </main>

    <footer class="pb-8 text-center text-aged/40 text-xs tracking-widest">
      <p class="mt-6">
        <a
          href="https://github.com/c12i/babel-go"
          target="_blank"
          rel="noopener noreferrer"
          class="text-aged/60 hover:text-aged transition-colors"
        >
          View on GitHub
        </a>
      </p>
    </footer>
  </body>
</html>
