{{ define "header" }}
<header class="border-b border-gray-200 dark:border-aged/20 py-3 sm:py-4 md:py-6">
  <div class="container mx-auto px-3 sm:px-4">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="text-lg sm:text-xl md:text-2xl tracking-widest text-gray-800 hover:text-gray-900 dark:text-aged dark:hover:text-amber-600 transition-colors"
      >
        THE LIBRARY
      </a>
      <nav class="flex gap-4 sm:gap-6 md:gap-8 text-xs sm:text-sm tracking-wider">
        <a
          href="/browse"
          class="text-gray-600 hover:text-gray-900 dark:text-aged/80 dark:hover:text-aged transition-colors"
        >
          BROWSE
        </a>
        <a
          href="/random"
          class="text-gray-600 hover:text-gray-900 dark:text-aged/80 dark:hover:text-aged transition-colors"
        >
          RANDOM
        </a>
        <button
          id="themeToggle"
          aria-label="Toggle theme"
          class="text-gray-600 hover:text-gray-900 dark:text-aged/80 dark:hover:text-aged transition-colors inline-flex items-center"
        >
          <!-- Sun icon for light mode (shows in dark mode) -->
          <svg class="hidden dark:inline w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <!-- Moon icon for dark mode (shows in light mode) -->
          <svg class="inline dark:hidden w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>
      </nav>
    </div>
  </div>
</header>

<script>
  document.getElementById("themeToggle")?.addEventListener("click", function () {
    const html = document.documentElement;
    const currentTheme = html.classList.contains("dark") ? "dark" : "light";
    const newTheme = currentTheme === "dark" ? "light" : "dark";

    html.classList.remove(currentTheme);
    html.classList.add(newTheme);
    localStorage.setItem("theme", newTheme);
  });
</script>

{{ end }}
